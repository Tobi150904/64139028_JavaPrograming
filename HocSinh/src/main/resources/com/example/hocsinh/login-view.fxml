<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.hocsinh.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="Login" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <VBox spacing="10.0">
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Username:"/>
            <TextField fx:id="usernameField" promptText="Enter your username" prefWidth="200"/>
        </HBox>
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Password:"/>
            <PasswordField fx:id="passwordField" promptText="Enter your password" prefWidth="200"/>
        </HBox>
    </VBox>
    <Button text="Login" onAction="#onLoginButtonClick" style="-fx-font-size: 14px; -fx-padding: 10px 20px;"/>
    <Label fx:id="errorLabel" textFill="red" style="-fx-font-size: 12px;"/>
</VBox>